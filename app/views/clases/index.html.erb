<p id="notice"><%= notice %></p>

<h1>Clases</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Video link</th>
      <th>Text transcription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clases.each do |clase| %>
      <tr>
        <td><%= clase.title %></td>
        <td><%= clase.video_link %></td>
        <td><%= clase.text_transcription %></td>
        <td><%= link_to 'Show', clase %></td>
        <td><%= link_to 'Edit', edit_clase_path(clase) %></td>
        <td><%= link_to 'Destroy', clase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

